{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": { "type": "object" },
    "source": { "type": "object" },
    "context": { "type": "object" }
  },
  "variables": {
    "instance": {
      "settings": {
        "fileUris": "[parameters('source').settingsConfig.fileUris]",
        "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -Command \"& {.\\fileshare.ps1 -driveLetter \\\"', parameters('source').settingsConfig.fileShareSettings.driveLetter, '\\\" -fileShareUri \\\"', parameters('source').settingsConfig.fileShareSettings.fileShareUri, '\\\" -storageAccountName \\\"', parameters('source').settingsConfig.fileShareSettings.storageAccountName, '\\\" -storageAccountKey \\\"', parameters('source').settingsConfig.fileShareSettings.storageAccountKey, '\\\"}\"')]"
      },
      "protectedSettings": { }
    }

  },
  "resources": [

  ],
  "outputs": {
    "settings": {
      "type": "object",
      "value": "[variables('instance')]"
    }
  }
}
